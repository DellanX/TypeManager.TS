{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015","dom"],
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "spec/**/*.spec.ts"
  ]
}
